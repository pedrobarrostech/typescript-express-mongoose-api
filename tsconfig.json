{
  "compilerOptions": {

    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "mapRoot": "./",
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitAny": false,
    "target": "es6",
    "typeRoots": [
      "../node_modules/@types"
    ],
    "outDir": "dist",
    "sourceMap": true,
    "sourceRoot": "src",
    "lib": ["dom", "es5"],
    "types": [
      "body-parser",
      "compression",
      "cookie-parser",
      "express",
      "mongoose",
      "express-serve-static-core",
      "mime",
      "node",
      "serve-static",
      "hammerjs",
      "core-js"
    ]
  },
  "exclude": [
    "node_modules", //<-- this would be needed in case of VS2015
    "node_modules/@typings",
    "typings",
    "dist"
  ],
  "compileOnSave": false,
  "buildOnSave": false,
  "atom": { "rewriteTsconfig": false }
}
